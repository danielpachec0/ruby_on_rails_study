<div class="row">
    <div class="col-xs-12">
        <h1>Log In</h1>
    </div>
    <div class=" col-md-6 col-md-offset-3 col-xs-12">
        <%= form_for :session, url: login_path, method: :post do |f|%>
            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, placeholde: 'Email', class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, placeholde: 'password', class: 'form-control' %>
            </div>

            <%= f.submit 'Log in', class: 'btn btn-primary'%>

        <% end %>
    </div>
</div>
